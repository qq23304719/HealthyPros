<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ditu2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="87.5dp"
            android:background="@drawable/rounded_yanzhengma_write">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username"
                android:hint="账号/手机号"
                android:background="@null"
                android:textSize="10.5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:id="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/yonghu"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="6.5dp"
            android:background="@drawable/rounded_yanzhengma_write">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:inputType="textPersonName|textPassword"
                android:ems="10"

                android:id="@+id/password"
                android:hint="请输入密码"
                android:background="@null"
                android:textSize="10.5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:id="@+id/imageView4"
                android:src="@mipmap/suo"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/rounded_yanzhengma">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="登录"
                android:id="@+id/denglu"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="忘记密码？"
            android:id="@+id/wangji"
            android:layout_gravity="right"
            android:layout_marginRight="65dp"
            android:layout_marginTop="19.5dp"
            android:textColor="#ffffff"
            android:textSize="10.5dp" />


    </LinearLayout>

</RelativeLayout>
